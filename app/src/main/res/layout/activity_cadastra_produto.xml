<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastra_produto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.romulo.comprafacil.CadastraProdutoActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:ems="10"
        android:id="@+id/editTextNomProd1"
        android:layout_below="@+id/editTextCodProd1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />




    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerProduto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="230dp"
        android:layout_marginStart="230dp"
        android:layout_alignTop="@+id/editTextSecao"
        android:layout_alignBottom="@+id/editTextSecao" />

    <Button
        android:text="Cadastrar"
        android:id="@+id/cadrasProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        style="@android:style/Widget.Button"
        android:background="@color/colorPrimary"
        tools:ignore="HardcodedText,UnusedAttribute"
        android:layout_below="@+id/editTextSecao"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Seção"
        android:ems="10"
        android:id="@+id/editTextSecao"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Código"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:id="@+id/editTextCodProd1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTelaCad"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:text="CADASTRO DE PRODUTOS"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
