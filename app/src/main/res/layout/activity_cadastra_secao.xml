<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastra_secao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.romulo.comprafacil.CadastraSecaoActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextNomeSecao"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/editTextCodigoSecao"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Nome do produto:" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerEscoSecao"
        android:layout_marginTop="98dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextCodigoSecao"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/spinnerEscoSecao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Código Seção:" />

    <Button
        android:text="Cadastrar"
        android:id="@+id/buttonCadastrarSecao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        style="@android:style/Widget.Button"
        android:background="@color/colorPrimaryDark"
        tools:ignore="HardcodedText,UnusedAttribute"
        android:layout_below="@+id/editTextNomeSecao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp" />
</RelativeLayout>
